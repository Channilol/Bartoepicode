@using System.Web.Mvc;
@model Bartoepicode.Models.Utenti

@{
    ViewBag.Title = "Add";
}


<h2>Registrazione</h2>
@using (Html.BeginForm("Add", "Utenti", FormMethod.Post, new { @class = "row g-3 needs-validation" }))
{
    if (ViewBag.IsValid != null)
    {
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
    }

    <div class="col-6 form-group">
        @Html.LabelFor(model => model.Email, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="col-6 form-group">
        @Html.LabelFor(model => model.Password, new { htmlAttributes = new { @class = "form-label" } })
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
    </div>

    <div class="form-check">
        @Html.LabelFor(model => model.Azienda, new { @class = "form-check-label" })
        @Html.CheckBoxFor(model => model.Azienda, new { @class = "form-check-input", id = "checkboxAzienda" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nome, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div id="privato">
        <div class="form-group col-6">
            @Html.LabelFor(model => model.Cognome, new { htmlAttributes = new { @class = "form-label" } })
            @Html.EditorFor(model => model.Cognome, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-6">
            @Html.LabelFor(model => model.CodiceFiscale, new { htmlAttributes = new { @class = "form-label" } })
            @Html.EditorFor(model => model.CodiceFiscale, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div id="azienda" style="display:none;">
        <div class="form-group">
            @Html.LabelFor(model => model.PartitaIVA, new { htmlAttributes = new { @class = "form-label" } })
            @Html.EditorFor(model => model.PartitaIVA, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="col-12">
        <button class="btn btn-primary mt-3" type="submit">Registrati</button>
    </div>
}

@section scripts {
    <script type="text/javascript">
        let checkbox = document.querySelector('#checkboxAzienda');
        let privato = document.querySelector('#privato');
        let azienda = document.querySelector('#azienda');

        checkbox.addEventListener('change', () => {
            if (checkbox.checked) {
                privato.style.display = 'none';
                azienda.style.display = 'block';
            }
            else {
                privato.style.display = 'block';
                azienda.style.display = 'none';
            }
        })
    </script>
}